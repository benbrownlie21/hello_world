<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="background-color: rgb(236,148,44); width: 50%; padding: 0.1px 10px 0.5px 10px; border-radius: 10px;">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    </br>
  <% end %>

  <div style= "padding-left: 5px; padding-bottom: 2px;">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div style= "padding-left: 5px; padding-bottom: 5px;">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>
  <div style= "padding-left: 5px;">
    <%= form.submit article.new_record? ? "Create Article" : "Update Article" %>
  </div>
<% end %>
