<%# Only show the trigger button if we explicitly ask for it %>
<% if local_assigns[:show_button] %>
  <button type="button" class="btn <%= article.archived? ? 'btn-outline-primary btn-sm' : 'btn-outline-warning btn-sm' %>"
      data-bs-toggle="modal" 
      data-bs-target="#archiveModal-<%= article.id %>">
    <%= article.archived? ? "Unarchive" : "Archive" %>
  </button>
<% end %>

<div class="modal fade" id="archiveModal-<%= article.id %>" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-start">
        Are you sure you want to <%= article.archived? ? "restore" : "archive" %> "<%= article.title %>"?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
        <% if article.archived? %>
          <%= button_to "Unarchive", set_unarchived_article_path(article), method: :patch, class: "btn btn-outline-primary btn-sm" %>
        <% else %>
          <%= button_to "Archive", set_archived_article_path(article), method: :patch, class: "btn btn-outline-warning btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>