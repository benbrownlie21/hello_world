<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row ms-1"> <div class="col-md-6">
    <%= form_with model: @article do |f| %>
      <div class="mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, rows: 5, class: "form-control" %>
      </div>

      <%= render "edit_modal", article: @article %>
      <%= link_to "Back", @article, method: :get, class: "btn btn-outline-secondary ms-2" %>
      <%= link_to "Article List", articles_path, class: "btn btn-outline-secondary ms-2" %>
    <% end %>
  </div>
</div>

<% end %>
